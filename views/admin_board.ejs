<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <style>
        /* Reset default margin and padding */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Body styles */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f9;
        }

        /* Dashboard container */
        .dashboard {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar styles */
        .sidebar {
            width: 250px;
            background-color: #6a1b9a;
            padding: 20px 0;
        }
        .sidebar a {
            display: block;
            padding: 10px 20px;
            color: white;
            text-decoration: none;
            transition: background 0.3s;
            border-bottom: 1px solid #4a148c;
        }
        .sidebar a:hover {
            background-color: #7e57c2;
        }

        .main-content {
            flex-grow: 1;
            padding: 20px;
            background-color: #eee;
        }

        .logout-button {
            background-color: #ab47bc;
            color: white;
            padding: 10px 20px;
            border: none;
            cursor: pointer;
            transition: background 0.3s;
            position: absolute;
            top: 20px;
            right: 20px;
        }
        .logout-button:hover {
            background-color: #ce93d8;
        }
        .icon {
            margin-right: 10px;
        }
        .content-flex-container {
            display: flex;
            justify-content: space-between;
        }
        .inventory-item {
            background-color: white; 
            border: none;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
            border-radius: 10px; 
            padding: 20px;
            width: 200px;
            text-align: center;
        }
        .add-inventory-form {
            background-color: white;
            padding: 20px;
            margin-top: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .add-inventory-form label {
            display: block;
            margin-bottom: 5px;
        }

        .add-inventory-form input[type="text"],
        .add-inventory-form input[type="number"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .add-inventory-form input[type="submit"] {
            background-color: #6a1b9a;
            color: white;
            padding: 10px 20px;
            border: none;
            cursor: pointer;
            transition: background 0.3s;
        }

        .add-inventory-form input[type="submit"]:hover {
            background-color: #7e57c2;
        }
        
        .add-inventory-form-container {
            flex: 1;
            margin-left: 20px;
            margin-right: 30px;
            margin-bottom: 5px;
        }

        /* Past Orders Section */
        .past-orders {
            background-color: white;
            padding: 20px;
            margin-top: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-height: 500px; /* Set a maximum height */
            overflow-y: auto;  /* Make it scrollable */
        }
        

        .past-orders h2 {
            margin-bottom: 20px;
        }
 

        .past-orders li {
            background-color: #f4f4f9;
            margin-bottom: 20px;
            padding: 15px;
            border-radius: 8px;
            list-style-type: none;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <div class="dashboard">
        <div class="sidebar">
            <a href="/admin/complaint"><span class="icon">üìù</span>Complaints</a>
            <a href="/admin/mess"><span class="icon">üçΩÔ∏è</span> Edit Mess</a>
            <a href="/admin/view"><span class="icon">üîç</span>View Students</a>
            <a href="/admin/payment"><span class="icon">üí∞</span>View Payments</a>
            <a href="/admin/notice"><span class="icon">üì¢</span>Add Notices</a>
            <a href="/admin/profile"><span class="icon">üë§</span> Profile</a>
        </div>
        <div class="main-content">
            <h3>Hostel Manager (Admin)</h3>
            <div class="content-flex-container">
                
                <!-- Past Orders Section -->
                <div class="past-orders">
                    <h2>Past Orders</h2>
                    <ul>
                        <% orders.forEach(order => { %>
                            <li>
                                <strong>Item:</strong> <%= order.item %> <br>
                                <strong>Quantity:</strong> <%= order.quantity %> <br>
                                <strong>Ordered On:</strong> <%= order.ordered ? order.ordered.toDateString() : 'N/A' %>
                            </li>
                        <% }); %>
                    </ul>
                </div>                
                
                <!-- Add Inventory Form Section -->
                <div class="add-inventory-form-container">
                    <h2>Order New Inventory</h2>
                    <form action="/admin/addinventory" method="POST" class="add-inventory-form">
                        <label for="item-name">Item Name:</label>
                        <input type="text" id="item-name" name="itemName" required><br>
        
                        <label for="item-quantity">Quantity:</label>
                        <input type="number" id="item-quantity" name="itemQuantity" required><br>
        
                        <input type="submit" value="Place Order">
                    </form>
                </div>
            </div>
        </div>
        <form action="/logout" method="POST">
          <button class="logout-button">Logout</button>
        </form>
    </div>
</body>
</html>
